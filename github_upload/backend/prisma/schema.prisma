// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String   // Added for authentication
  clinicName String
  avatarUrl  String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Patient {
  id              String           @id @default(uuid())
  name            String
  phone           String
  email           String?
  history         String?          // Stored as JSON string or comma separated
  lastVisit       DateTime?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  clinicalRecords ClinicalRecord[]
  opportunities   Opportunity[]
}

model Opportunity {
  id             String            @id @default(uuid())
  patientId      String
  patient        Patient           @relation(fields: [patientId], references: [id])
  name           String
  phone          String
  keywordFound   String
  status         String            // Enum: NEW, SENT, RESPONDED, SCHEDULED, ARCHIVED
  lastContact    DateTime?
  scheduledDate  DateTime?
  notes          String?
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  clinicalRecords ClinicalRecord[] // Relation for quick view
}

model ClinicalRecord {
  id            String       @id @default(uuid())
  date          DateTime
  description   String
  type          String?      // procedure, consultation, exam
  patientId     String
  patient       Patient      @relation(fields: [patientId], references: [id])
  opportunityId String?
  opportunity   Opportunity? @relation(fields: [opportunityId], references: [id])
  createdAt     DateTime     @default(now())
}

model AppSettings {
  id                  String  @id @default(uuid())
  webhookUrl          String
  messagingWebhookUrl String?
  apiKey              String?
  messageTemplate     String?
}

model Notification {
  id        String   @id @default(uuid())
  title     String
  message   String
  type      String   // info, success, warning
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}
