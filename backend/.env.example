PORT=3001

# Supabase Configuration
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your_supabase_anon_key"

# JWT Configuration
JWT_SECRET="your_jwt_secret_key"
JWT_REFRESH_SECRET="your_jwt_refresh_secret_key"

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:5173"

# WhatsApp Configuration
# Choose provider: 'meta', 'evolution', or 'zapi'
WHATSAPP_PROVIDER="evolution"

# Meta WhatsApp Business API (Option 1)
# Get these from Meta for Developers: https://developers.facebook.com/
WHATSAPP_META_ACCESS_TOKEN="your_meta_access_token"
WHATSAPP_META_PHONE_NUMBER_ID="your_phone_number_id"
WHATSAPP_META_BUSINESS_ACCOUNT_ID="your_business_account_id"
WHATSAPP_META_API_VERSION="v18.0"

# Evolution API (Option 2 - RECOMMENDED)
# Self-hosted or cloud: https://evolution-api.com/
WHATSAPP_EVOLUTION_BASE_URL="http://localhost:8080"
WHATSAPP_EVOLUTION_INSTANCE_NAME="clinicaflow"
WHATSAPP_EVOLUTION_API_KEY="your_evolution_api_key"

# Z-API (Option 3)
# Get from: https://z-api.io/
WHATSAPP_ZAPI_INSTANCE_ID="your_instance_id"
WHATSAPP_ZAPI_TOKEN="your_zapi_token"

# Webhook (for all providers)
WHATSAPP_WEBHOOK_VERIFY_TOKEN="clinicaflow_webhook_token"
