# ClinicaFlow - Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3001
NODE_ENV=development

# Supabase Configuration (Required)
# Get these from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# JWT Configuration (Required - Change in production!)
# Generate secure keys: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_minimum_32_characters
JWT_REFRESH_SECRET=your_jwt_refresh_secret_minimum_32_characters

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# WhatsApp Configuration (Evolution API - Optional)
WHATSAPP_PROVIDER=evolution
WHATSAPP_EVOLUTION_BASE_URL=http://localhost:8080
WHATSAPP_EVOLUTION_INSTANCE_NAME=clinicaflow
WHATSAPP_EVOLUTION_API_KEY=your_evolution_api_key_here

# Webhook Configuration (Optional)
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token_here

# Email Configuration (SMTP - Optional)
# For Gmail: smtp.gmail.com, port 587
# For Outlook: smtp-mail.outlook.com, port 587
# For SendGrid: smtp.sendgrid.net, port 587
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
EMAIL_FROM=noreply@allooral.com

# Sentry Configuration (Optional - Error Tracking)
# Get your DSN from: https://sentry.io
SENTRY_DSN=your_sentry_dsn_here
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
APP_VERSION=1.0.0
